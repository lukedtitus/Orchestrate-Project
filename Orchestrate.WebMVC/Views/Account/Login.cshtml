@using Orchestrate.WebMVC.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<h2 class="text-center" style="color:white;">@ViewBag.Title.</h2>
<div class="row">
    <div class="form-horizontal"  id="notecardform2" style="background-color: rgba(252,252,252,0.2); padding-top: 30px;">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="text-center" style="color:white;">Use a local account to log in.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "color:white;" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label", style = "color:white;" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "background-color:#262626; color:white;" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", style = "color:white;" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label", style = "color:white;" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "background-color:#262626; color:white;" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe, new { style = "color:white;" })
                        </div>
                    </div>
                </div>
                <div class="form-group" id="submitbuttondiv2">
                    <div class="col-md-12 text-center">
                        <input type="submit" value="Log in" class="btn btn-default" id="submitbutton" />
                    </div>
                </div>
                <p class="text-center">
                    @Html.ActionLink("Register as a new user", "Register")
                </p>
                @* Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}