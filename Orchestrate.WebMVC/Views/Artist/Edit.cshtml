@model Orchestrate.Models.ArtistEdit

@{
    ViewBag.Title = "Edit";
}
<script src="~/Scripts/bootstrap.min.js"></script>

<h2 class="text-center" id="textwhite">Edit Artist</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" id="notecardform2" style="background-color: rgba(252,252,252,0.2); padding-top: 30px;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ArtistId)
        <div class="form-group">
            @Html.LabelFor(model => model.ArtistName, htmlAttributes: new { @class = "control-label col-md-4", style = "color:white;" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.ArtistName, new { htmlAttributes = new { @class = "form-control", style = "background-color:#262626; color:white;" } })
                @Html.ValidationMessageFor(model => model.ArtistName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NumberOfMembers, htmlAttributes: new { @class = "control-label col-md-4", style = "color:white;" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.NumberOfMembers, new { htmlAttributes = new { @class = "form-control", style = "background-color:#262626; color:white;" } })
                @Html.ValidationMessageFor(model => model.NumberOfMembers, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Genre, htmlAttributes: new { @class = "control-label col-md-4", style = "color:white;" })
            <div class="col-md-8" id="dropdownlist">
                @Html.EnumDropDownListFor(model => model.Genre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Genre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="submitbuttondiv2">
            <div class="col-md-12 text-center">
                <input type="submit" value="Save" class="btn btn-default" id="submitbutton" />
            </div>
        </div>
    </div>
}

<div class="text-center">
    @Html.ActionLink("Back to List", "Index", null, new { style = "color:white;" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
